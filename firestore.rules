rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow authenticated users to read driver data for map display
      allow read: if request.auth != null && resource.data.role == 'driver' && resource.data.isOnline == true;
    }
    
    // Rides collection - users can read/write their own rides
    match /rides/{rideId} {
      allow read, write: if request.auth != null;
      // Customers can create rides
      allow create: if request.auth != null;
      // Customers can read their own rides
      allow read: if request.auth != null && (resource.data.customerId == request.auth.uid || resource.data.driverId == request.auth.uid);
      // Drivers can update rides they're assigned to
      allow update: if request.auth != null && (resource.data.customerId == request.auth.uid || resource.data.driverId == request.auth.uid);
    }
    
    // Drivers collection - users can read/write their own driver data
    match /drivers/{driverId} {
      allow read, write: if request.auth != null && request.auth.uid == driverId;
    }
    
    // Driver locations collection - drivers can write, authenticated users can read
    match /driverLocations/{driverId} {
      // Drivers can write their own location data
      allow write: if request.auth != null && request.auth.uid == driverId;
      // Authenticated users can read all driver locations (for map display)
      allow read: if request.auth != null;
    }
    
    // Public data that anyone can read
    match /public/{document=**} {
      allow read: if true;
    }
  }
}